<h1>博客首页</h1>
<p>
  <%= link_to "新建文章", new_article_path  %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>内容</th>
    <th>分类</th>
    <th>状态</th>
    <th>操作</th>
  </tr>
  <% @articles.each do |f| %>
  <tr>
    <td><%= f.title %></td>
    <td><%= f.text %></td>
    <td><%= f.sort_id %></td>
    <td><%= f.article_state %></td>
    <td>
      <%= link_to "显示", article_path(f) %>
      <%= link_to "编辑", edit_article_path(f) %>
      <%= link_to "删除", article_path(f),
          method: :delete, data: { confirm: "确认删除该文章？" } %>
    </td>
  </tr>
  <% end %>
</table>
