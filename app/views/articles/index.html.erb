<h1>博客后台</h1>
<p>
  <%= link_to "新建文章", new_article_path  %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>内容</th>
    <th>分类</th>
    <th>状态</th>
    <th>操作</th>
  </tr>
  <% @articles.each do |f| %>
  <tr>
    <td><%=  link_to "#{f.title}", article_path(f) %> (<%= f.article_count %>)</td>
    <td><%= f.text.html_safe %></td>
    <td><%= f.sort.name %></td>
    <td><%= f.article_state %></td>
    <td>
      <%= link_to "编辑", edit_article_path(f) %>
      <%= link_to "删除", article_path(f),
          method: :delete, data: { confirm: "确认删除该文章？" } %>
    </td>
  </tr>
  <% end %>
</table>

<div class="text-center">
  <%= will_paginate @articles %>
</div>
