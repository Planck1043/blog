<div class="product-box">
  <div class="container">
    <!--=== 搜索结果，没有符合条件的数据 ===-->
    <% if @query_string.blank? %>
      <h2 class="search-info-title">搜索关键词不能为空，请输入关键字</h2>
    <% elsif @articles.blank?%>
      <br>
        <h2 class="search-info-title">没有搜索结果，换个关键词试试？</h2>
    <% else %>
    <!--=== 搜索结果，有符合条件的数据 ===-->
    <!--=== 搜索內容 ===-->
    <table class="table table-bordered table-hover">
      <tr class="text-info">
        <th>标题</th>
        <th>内容</th>
        <th>操作</th>
      </tr>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td>
            <%= link_to "显示", article_path(article) %>
          </td>
        </tr>
        <% end %>
      </table>


        <div class="page-box">
          <%= will_paginate @articles, renderer: BootstrapPagination::Rails, :previous_label => t('previous-label'), :next_label => t('next-label') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
