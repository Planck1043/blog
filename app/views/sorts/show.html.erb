<h1>分类 Show</h1>
<p>
  <%= @sort.name %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>内容</th>
    <th>分类</th>
    <th>状态</th>
  </tr>
  <% @articles.each do |f| %>
  <tr>
    <td><%= link_to "#{f.title}", article_path(f) %> (<%= f.article_count %>)</td>
    <td><%= f.text.html_safe %></td>
    <td><%= f.sort.name %></td>
    <td><%= f.article_state %></td>

  </tr>
  <% end %>
</table>
