<h1>分类</h1>
<p>
  <%= @sort.name %>
</p>

<table class="table table-bordered table-hover">
  <tr class="text-info">
    <th>标题</th>
    <th>内容</th>
  </tr>
  <% @articles.each do |f| %>
  <tr>
    <td><%= link_to "#{f.title}", article_path(f) %> (<%= f.article_count %>)</td>
    <td><%= f.text %></td>
  </tr>
  <% end %>
</table>
